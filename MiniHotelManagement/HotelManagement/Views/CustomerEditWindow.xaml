<Window x:Class="HotelManagement.Views.CustomerEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Editor"
        Height="460" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F9FAFB">

    <Border Background="White" CornerRadius="10" Padding="20" Margin="10" BorderBrush="#D1D5DB" BorderThickness="1" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="Customer Information" 
                       FontSize="20" FontWeight="Bold"
                       Foreground="#2563EB"
                       Margin="0,0,0,16"
                       HorizontalAlignment="Center" />

            <!-- Name -->
            <StackPanel Grid.Row="1" Margin="0,8">
                <TextBlock Text="Full Name" Foreground="#374151" FontWeight="SemiBold"/>
                <TextBox x:Name="txtName" Height="30" Margin="0,4,0,0" Padding="6"
                         BorderBrush="#CBD5E1" BorderThickness="1" 
                         Background="#F3F4F6" />
            </StackPanel>

            <!-- Email -->
            <StackPanel Grid.Row="2" Margin="0,8">
                <TextBlock Text="Email Address" Foreground="#374151" FontWeight="SemiBold"/>
                <TextBox x:Name="txtEmail" Height="30" Margin="0,4,0,0" Padding="6"
                         BorderBrush="#CBD5E1" BorderThickness="1" 
                         Background="#F3F4F6" />
            </StackPanel>

            <!-- Phone -->
            <StackPanel Grid.Row="3" Margin="0,8">
                <TextBlock Text="Telephone" Foreground="#374151" FontWeight="SemiBold"/>
                <TextBox x:Name="txtPhone" Height="30" Margin="0,4,0,0" Padding="6"
                         BorderBrush="#CBD5E1" BorderThickness="1" 
                         Background="#F3F4F6" />
            </StackPanel>

            <!-- Birthday -->
            <StackPanel Grid.Row="4" Margin="0,8">
                <TextBlock Text="Birthday (yyyy-MM-dd)" Foreground="#374151" FontWeight="SemiBold"/>
                <TextBox x:Name="txtBirthday" Height="30" Margin="0,4,0,0" Padding="6"
                         BorderBrush="#CBD5E1" BorderThickness="1" 
                         Background="#F3F4F6" />
            </StackPanel>

            <!-- Password -->
            <StackPanel Grid.Row="5" Margin="0,8">
                <TextBlock Text="Password" Foreground="#374151" FontWeight="SemiBold"/>
                <PasswordBox x:Name="txtPass" Height="30" Margin="0,4,0,0" Padding="6"
                             BorderBrush="#CBD5E1" BorderThickness="1" 
                             Background="#F3F4F6" />
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Save"
                        Width="90" Height="34" Margin="6"
                        Background="#2563EB" Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Click="BtnSave_Click"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#2563EB"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1D4ED8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Delete"
                        Width="90" Height="34" Margin="6"
                        Background="#DC2626" Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Click="BtnDelete_Click"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#DC2626"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#B91C1C"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Cancel"
                        Width="90" Height="34" Margin="6"
                        Background="#6B7280" Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Click="BtnCancel_Click"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#6B7280"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4B5563"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

        </Grid>
    </Border>
</Window>
