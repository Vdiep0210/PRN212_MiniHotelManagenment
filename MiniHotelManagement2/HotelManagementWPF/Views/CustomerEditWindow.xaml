<Window x:Class="HotelManagement.Views.CustomerEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Editor"
        Height="420" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F9FAFB">

    <Border Margin="20" Padding="20" CornerRadius="12" Background="White" BorderBrush="#DDD" BorderThickness="1" >
        <StackPanel>

            <!-- Header -->
            <TextBlock Text="Customer Information"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#2D3748"
                       Margin="0,0,0,12"
                       HorizontalAlignment="Center"/>

            <!-- Full Name -->
            <TextBlock Text="Full Name:" Foreground="#4A5568" Margin="0,6,0,2"/>
            <TextBox x:Name="txtName" Height="28" Padding="4" BorderBrush="#CBD5E0" BorderThickness="1" />

            <!-- Email -->
            <TextBlock Text="Email Address:" Foreground="#4A5568" Margin="0,8,0,2"/>
            <TextBox x:Name="txtEmail" Height="28" Padding="4" BorderBrush="#CBD5E0" BorderThickness="1" />

            <!-- Phone -->
            <TextBlock Text="Phone Number:" Foreground="#4A5568" Margin="0,8,0,2"/>
            <TextBox x:Name="txtPhone" Height="28" Padding="4" BorderBrush="#CBD5E0" BorderThickness="1" />

            <!-- Birthday -->
            <TextBlock Text="Birthday (yyyy-MM-dd):" Foreground="#4A5568" Margin="0,8,0,2"/>
            <TextBox x:Name="txtBirthday" Height="28" Padding="4" BorderBrush="#CBD5E0" BorderThickness="1" />

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0"
                        >
                <Button Content="💾 Save"
                        Width="90" Height="32"
                        Background="#3182CE"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,0,8,0"
                        BorderBrush="#2B6CB0"
                        Click="BtnSave_Click"/>

                <Button Content="🗑 Delete"
                        Width="90" Height="32"
                        Background="#E53E3E"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,0,8,0"
                        BorderBrush="#C53030"
                        Click="BtnDelete_Click"/>

                <Button Content="❌ Cancel"
                        Width="90" Height="32"
                        Background="#A0AEC0"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="#718096"
                        Click="BtnCancel_Click"/>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>
