<Window x:Class="HotelManagement.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Mini Hotel Management"
        Height="380" Width="460"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F3F6FB"
        FontFamily="Segoe UI">

    <Grid>
        <!-- Background gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#E0EAFC" Offset="0.0"/>
                <GradientStop Color="#CFDEF3" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Card Border -->
        <Border Width="380"
                Height="300"
                Padding="28"
                CornerRadius="14"
                Background="White"
                BorderBrush="#D1D5DB"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                SnapsToDevicePixels="True"
                Effect="{DynamicResource {x:Static SystemParameters.DropShadowKey}}">

            <StackPanel>

                <!-- Title -->
                <TextBlock Text="🏨 Mini Hotel Management"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#2B6CB0"
                           TextAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Email -->
                <TextBlock Text="Email Address"
                           FontWeight="SemiBold"
                           Foreground="#4A5568"
                           Margin="0,0,0,4"/>
                <TextBox x:Name="txtEmail"
                         Height="34"
                         FontSize="14"
                         Padding="6"
                         BorderBrush="#CBD5E0"
                         BorderThickness="1"
                         Background="#F9FAFB"
                         ToolTip="Enter your email"/>

                <!-- Password -->
                <TextBlock Text="Password"
                           FontWeight="SemiBold"
                           Foreground="#4A5568"
                           Margin="0,12,0,4"/>
                <PasswordBox x:Name="txtPass"
                             Height="34"
                             FontSize="14"
                             Padding="6"
                             BorderBrush="#CBD5E0"
                             BorderThickness="1"
                             Background="#F9FAFB"
                             ToolTip="Enter your password"/>

                <!-- Login Button -->
                <Button Content="Sign In"
                        Width="100"
                        Height="36"
                        HorizontalAlignment="Right"
                        Margin="0,24,0,0"
                        FontWeight="Bold"
                        FontSize="14"
                        Background="#2B6CB0"
                        Foreground="White"
                        BorderBrush="#2C5282"
                        BorderThickness="1"
                        Cursor="Hand"
                        Click="BtnLogin_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#2B6CB0"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="#2C5282"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="8"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="1">
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3C82E6"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Footer -->
                <TextBlock Text="Login with admin@FUMiniHotelSystem.com / @@abc123@@ for Admin access"
                           FontSize="11"
                           Foreground="#718096"
                           Margin="0,16,0,0"
                           TextAlignment="Center"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
