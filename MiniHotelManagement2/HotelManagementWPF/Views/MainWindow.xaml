<Window x:Class="HotelManagement.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🏨 Mini Hotel Management System"
        Height="720" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#F7FAFC">

    <Border Margin="16"
            Padding="12"
            CornerRadius="10"
            Background="White"
            BorderBrush="#E2E8F0"
            BorderThickness="1"
            Effect="{DynamicResource {x:Static SystemParameters.DropShadowKey}}">

        <TabControl FontSize="14" FontWeight="SemiBold" Foreground="#2D3748">

            <!-- 💁 Customers Tab -->
            <TabItem Header="👤 Customers">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBox x:Name="txtSearchCust"
                                 Width="260" Height="32"
                                 Padding="6"
                                 FontSize="13"
                                 Background="#EDF2F7"
                                 BorderBrush="#CBD5E0"
                                 ToolTip="Search by customer name or email"/>
                        <Button Content="🔍 Search" Click="BtnSearchCustomer_Click"
                                Margin="8,0,0,0" Width="90" Height="32" Background="#3182CE" Foreground="White"/>
                        <Button Content="➕ New" Click="BtnNewCustomer_Click"
                                Margin="8,0,0,0" Width="90" Height="32" Background="#38A169" Foreground="White"/>
                    </StackPanel>

                    <!-- Table -->
                    <DataGrid x:Name="dgCustomers"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              AlternatingRowBackground="#F7FAFC"
                              RowBackground="White"
                              BorderBrush="#E2E8F0"
                              MouseDoubleClick="dgCustomers_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding CustomerId}" Width="80"/>
                            <DataGridTextColumn Header="Full Name" Binding="{Binding CustomerFullName}" Width="*"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding EmailAddress}" Width="220"/>
                            <DataGridTextColumn Header="Phone" Binding="{Binding Telephone}" Width="140"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- 🏠 Rooms Tab -->
            <TabItem Header="🏠 Rooms">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBox x:Name="txtSearchRoom"
                                 Width="260" Height="32"
                                 Padding="6"
                                 FontSize="13"
                                 Background="#EDF2F7"
                                 BorderBrush="#CBD5E0"
                                 ToolTip="Search room by number or type"/>
                        <Button Content="🔍 Search" Click="BtnSearchRoom_Click"
                                Margin="8,0,0,0" Width="90" Height="32" Background="#3182CE" Foreground="White"/>
                        <Button Content="➕ New Room" Click="BtnNewRoom_Click"
                                Margin="8,0,0,0" Width="110" Height="32" Background="#38A169" Foreground="White"/>
                        <Button Content="🗑 Delete" Click="BtnDeleteRoom_Click"
                                Margin="8,0,0,0" Width="90" Height="32" Background="#E53E3E" Foreground="White"/>
                    </StackPanel>

                    <!-- Table -->
                    <DataGrid x:Name="dgRooms"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              AlternatingRowBackground="#F7FAFC"
                              RowBackground="White"
                              BorderBrush="#E2E8F0"
                              MouseDoubleClick="dgRooms_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Room ID" Binding="{Binding RoomId}" Width="80"/>
                            <DataGridTextColumn Header="Number" Binding="{Binding RoomNumber}" Width="140"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding RoomType.RoomTypeName}" Width="220"/>
                            <DataGridTextColumn Header="Price/day ($)" Binding="{Binding RoomPricePerDay}" Width="120"/>
                            <DataGridTextColumn Header="Capacity" Binding="{Binding RoomMaxCapacity}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- 📅 Bookings Tab -->
            <TabItem Header="📅 Bookings">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="➕ New Booking" Click="BtnNewBooking_Click"
                                Width="130" Height="34" Background="#38A169" Foreground="White"/>
                        <Button Content="📊 Report" Click="BtnReport_Click"
                                Margin="8,0,0,0" Width="110" Height="34" Background="#3182CE" Foreground="White"/>
                    </StackPanel>

                    <!-- Table -->
                    <DataGrid x:Name="dgBookings"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              AlternatingRowBackground="#F7FAFC"
                              RowBackground="White"
                              BorderBrush="#E2E8F0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Booking ID" Binding="{Binding BookingReservationId}" Width="100"/>
                            <DataGridTextColumn Header="Booking Date" Binding="{Binding BookingDate, StringFormat=\{0:yyyy-MM-dd\}}" Width="160"/>
                            <DataGridTextColumn Header="Customer" Binding="{Binding Customer.CustomerFullName}" Width="220"/>
                            <DataGridTextColumn Header="Total Price ($)" Binding="{Binding TotalPrice}" Width="140"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

        </TabControl>
    </Border>
</Window>
