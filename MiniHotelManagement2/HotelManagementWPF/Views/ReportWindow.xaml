<Window x:Class="HotelManagement.Views.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="📊 Revenue Report - Mini Hotel Management"
        Height="520" Width="860"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F7FAFC">

    <Border Margin="20"
            Padding="20"
            CornerRadius="12"
            Background="White"
            BorderBrush="#E2E8F0"
            BorderThickness="1"
            Effect="{DynamicResource {x:Static SystemParameters.DropShadowKey}}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header + bộ lọc -->
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="0,0,0,12">
                <TextBlock Text="📅 From:"
                           VerticalAlignment="Center"
                           Foreground="#2D3748"
                           FontWeight="Bold"
                           Margin="0,0,6,0"/>
                <DatePicker x:Name="dpFrom"
                            Width="150"
                            Margin="0,0,12,0"
                            BorderBrush="#CBD5E0"
                            Background="#EDF2F7"/>

                <TextBlock Text="To:"
                           VerticalAlignment="Center"
                           Foreground="#2D3748"
                           FontWeight="Bold"
                           Margin="0,0,6,0"/>
                <DatePicker x:Name="dpTo"
                            Width="150"
                            BorderBrush="#CBD5E0"
                            Background="#EDF2F7"/>

                <Button Content="▶ Run Report"
                        Width="130" Height="34"
                        Background="#2B6CB0"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="#2C5282"
                        Margin="16,0,0,0"
                        Cursor="Hand"
                        Click="BtnRun_Click"/>
            </StackPanel>

            <!-- Bảng kết quả -->
            <DataGrid x:Name="dgReport"
                      Grid.Row="1"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      AlternatingRowBackground="#F7FAFC"
                      RowBackground="White"
                      BorderBrush="#E2E8F0"
                      HeadersVisibility="Column"
                      FontSize="13"
                      Margin="0,8,0,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Reservation ID"
                                        Binding="{Binding BookingReservationId}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Booking Date"
                                        Binding="{Binding BookingDate, StringFormat=\{0:yyyy-MM-dd\}}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Customer Name"
                                        Binding="{Binding Customer.CustomerFullName}"
                                        Width="2*"/>
                    <DataGridTextColumn Header="Total Price ($)"
                                        Binding="{Binding TotalPrice, StringFormat=\{0:C\}}"
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</Window>