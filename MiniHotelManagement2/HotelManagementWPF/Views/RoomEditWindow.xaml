<Window x:Class="HotelManagement.Views.RoomEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Room Editor - Mini Hotel Management"
        Height="480" Width="440"
        WindowStartupLocation="CenterScreen"
        Background="#F7FAFC"
        ResizeMode="NoResize">

    <Border Margin="20"
            Padding="20"
            CornerRadius="12"
            Background="White"
            BorderBrush="#E2E8F0"
            BorderThickness="1"
            Effect="{DynamicResource {x:Static SystemParameters.DropShadowKey}}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Nội dung chính -->
            <StackPanel>
                <!-- Tiêu đề -->
                <TextBlock Text="🏨 Room Information"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#2B6CB0"
                           TextAlignment="Center"
                           Margin="0,0,0,16"/>

                <!-- Room Number -->
                <TextBlock Text="Room Number:" FontWeight="SemiBold" Foreground="#4A5568"/>
                <TextBox x:Name="txtNumber"
                         Margin="0,4,0,12"
                         Height="30"
                         FontSize="14"
                         Padding="6"
                         BorderBrush="#CBD5E0"
                         Background="#F9FAFB"
                         ToolTip="Enter room number"/>

                <!-- Description -->
                <TextBlock Text="Description:" FontWeight="SemiBold" Foreground="#4A5568"/>
                <TextBox x:Name="txtDescription"
                         Margin="0,4,0,12"
                         Height="70"
                         FontSize="14"
                         Padding="6"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         BorderBrush="#CBD5E0"
                         Background="#F9FAFB"
                         ToolTip="Enter room details"/>

                <!-- Max Capacity -->
                <TextBlock Text="Max Capacity:" FontWeight="SemiBold" Foreground="#4A5568"/>
                <TextBox x:Name="txtCapacity"
                         Margin="0,4,0,12"
                         Height="30"
                         FontSize="14"
                         Padding="6"
                         BorderBrush="#CBD5E0"
                         Background="#F9FAFB"
                         ToolTip="Enter room capacity"/>

                <!-- Price per Day -->
                <TextBlock Text="Price per Day:" FontWeight="SemiBold" Foreground="#4A5568"/>
                <TextBox x:Name="txtPrice"
                         Margin="0,4,0,12"
                         Height="30"
                         FontSize="14"
                         Padding="6"
                         BorderBrush="#CBD5E0"
                         Background="#F9FAFB"
                         ToolTip="Enter price per day"/>

                <!-- Room Type -->
                <TextBlock Text="Room Type:" FontWeight="SemiBold" Foreground="#4A5568"/>
                <ComboBox x:Name="cmbRoomType"
                          Margin="0,4,0,12"
                          Height="32"
                          FontSize="14"
                          BorderBrush="#CBD5E0"
                          Background="#F9FAFB"
                          ToolTip="Select room type"/>
            </StackPanel>

            <!-- Nút bấm -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button Content="💾 Save"
                        Width="90" Height="34"
                        Margin="0,0,8,0"
                        Background="#2B6CB0"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="#2C5282"
                        Cursor="Hand"
                        Click="BtnSave_Click"/>

                <Button Content="🗑 Delete"
                        Width="90" Height="34"
                        Margin="0,0,8,0"
                        Background="#E53E3E"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="#C53030"
                        Cursor="Hand"
                        Click="BtnDelete_Click"/>

                <Button Content="❌ Cancel"
                        Width="90" Height="34"
                        Background="#A0AEC0"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="#718096"
                        Cursor="Hand"
                        Click="BtnCancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
