<Window x:Class="HotelManagement.Views.BookingEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Booking"
        Height="420"
        Width="440"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F7FAFC">

    <Border Margin="20"
            Padding="20"
            CornerRadius="10"
            Background="White"
            BorderBrush="#E2E8F0"
            BorderThickness="1">

        <StackPanel>

            <!-- Header -->
            <TextBlock Text="🛎️ Booking Information"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#2D3748"
                       Margin="0,0,0,16"
                       HorizontalAlignment="Center"/>

            <!-- Customer -->
            <TextBlock Text="Select Customer:"
                       Foreground="#4A5568"
                       Margin="0,6,0,2"/>
            <ComboBox x:Name="cbCustomer"
                      Height="30"
                      Padding="4"
                      BorderBrush="#CBD5E0"
                      DisplayMemberPath="CustomerFullName"
                      SelectedValuePath="CustomerId"/>

            <!-- Room -->
            <TextBlock Text="Select Room:"
                       Foreground="#4A5568"
                       Margin="0,10,0,2"/>
            <ComboBox x:Name="cbRoom"
                      Height="30"
                      Padding="4"
                      BorderBrush="#CBD5E0"
                      DisplayMemberPath="RoomNumber"
                      SelectedValuePath="RoomId"/>

            <!-- Dates -->
            <StackPanel Orientation="Horizontal" Margin="0,12,0,0" HorizontalAlignment="Center">
                <StackPanel Width="180">
                    <TextBlock Text="Start Date:" Foreground="#4A5568" Margin="0,0,0,4"/>
                    <DatePicker x:Name="dpStart" Height="30" BorderBrush="#CBD5E0"/>
                </StackPanel>
                <StackPanel Width="180" Margin="12,0,0,0">
                    <TextBlock Text="End Date:" Foreground="#4A5568" Margin="0,0,0,4"/>
                    <DatePicker x:Name="dpEnd" Height="30" BorderBrush="#CBD5E0"/>
                </StackPanel>
            </StackPanel>

            <!-- Total -->
            <TextBlock Text="Total Price:" Foreground="#4A5568" Margin="0,14,0,4"/>
            <TextBlock x:Name="txtTotal"
                       FontWeight="Bold"
                       FontSize="16"
                       Foreground="#2B6CB0"
                       Text="0"
                       HorizontalAlignment="Right"
                       Margin="0,0,8,0"/>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">
                <Button Content="💾 Save"
                        Width="100" Height="34"
                        Background="#3182CE"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="#2B6CB0"
                        Click="BtnSave_Click"/>
                <Button Content="❌ Cancel"
                        Width="100" Height="34"
                        Margin="10,0,0,0"
                        Background="#A0AEC0"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="#718096"
                        Click="BtnCancel_Click"/>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>
